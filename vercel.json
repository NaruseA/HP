{
  "version": 2,
  "builds": [
    { "src": "Public/**/*", "use": "@vercel/static" },
    { "src": "pages/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/pages/api/$1.js" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/(.*)", "dest": "/Public/$1" }
  ]
}
