{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "Public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/_next/(.*)", "dest": "/_next/$1" },
    { "src": "/blog", "dest": "/blog" },
    { "src": "/blog/(.*)", "dest": "/blog/$1" },
    { "src": "/(.*)", "dest": "/Public/$1" }
  ]
}
